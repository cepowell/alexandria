%h1 All Documents

%table#documents
  %thead
    %tr
      %th Document Title
      %th Doc Location
      %th Doc Id
      %th Collection ID
      %th More
  %tbody
    - @documents.each do |document|
      %tr
        %td= document.name
        %td= document.document
        %td= document.id
        %td=document.collections_id
        %td= link_to "More about #{document.name}", document_path(document)
        
