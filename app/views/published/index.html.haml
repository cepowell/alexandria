%body.landing
  %section#one.wrapper.style2.align-center
    .container
      %header
        %h2 Published Collections
      .row
        %section.feature.6u{:class => "12u$(small)"}
          %img.image.fit{:alt => "", :src => "/assets/pic02.jpg"}/
          .table-wrapper
          %table.alt#collections
            %thead
              %tr
                %th Collection Name
                %th Collection Details
            %tbody
              - @publishedCols.each do |collection|
                %tr
                  %td= collection.name 
                  %td= link_to "More about #{collection.name}", pub_col_path(collection)
    .container
      %header
        %h2 Published Documents
      .row
        %section.feature.6u{:class => "12u$(small)"}
          %img.image.fit{:alt => "", :src => "/assets/pic02.jpg"}/
          .table-wrapper
          %table.alt#documents
            %thead
              %tr
                %th Document Name
                %th Document Details
            %tbody
              - @publishedDocs.each do |document|
                %tr
                  %td= document.name 
                  %td= link_to "More about #{document.name}", pub_doc_path(document)
