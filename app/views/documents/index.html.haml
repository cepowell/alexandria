-#  This file is app/views/documents/index.html.haml
%h1 All Documents

%table#documents
  %thead
    %tr
      %th Document Title
      %th Doc Location
      %th Doc Id
      %th Collection ID
      %th Publication Status
      %th User Id
      %th More
  %tbody
    - @documents.each do |document|
      %tr
        %td= document.title
        %td= document.content
        %td= document.id
        %td= document.collection_id
        %td= document.isPublished
        %td= document.user_id
        %td= link_to "More about #{document.title}", document_path(document)
        
    -# add to end of index.html.haml

= link_to 'Add new document', new_document_path