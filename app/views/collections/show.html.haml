%h3 #{@collection.name}
%h6 Publication Status: #{@pubStatus}

%br
%br
%table.alt#documents_with_id
    %thead
        %tr
            %th Document Name
            %th Document Details
    %tbody
        - @curDocs.each do |document|
            %tr
                %td= document.title 
                %td= link_to "More about #{document.title}", document_path(document)

%br
<h6>
= label :collection, :tag_list, "Tags: "
- @collection.tag_list.each do |tag|
    #{tag}
    = "," unless tag == @collection.tag_list.last
</h6>
%br
= link_to 'Edit collection ', edit_collection_path(@collection)
%br
%br
= link_to ' Return to My Work ', home_index_path
%br
%br
= link_to ' Delete ', collection_path(@collection), :method => :delete