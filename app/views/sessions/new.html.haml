<center>
%h2 Existing User?
</center>
<center>
%h3 Sign In to Your Account
</center>

%section.feature.6u{:class => "12u$(small)"}
	%img.image.fit{:alt => "", :src => "/assets/login2.jpeg"}/


.textbox
	= link_to 'Login with Twitter', '/auth/twitter'
	%p
	<em>Login with email or pen name.</em>
	%p
	= form_tag loginuser_path(@user), :method => :post do
		= label :user, :email, 'Email'
		%br
		= text_field :user, :email
		%br
		= label :user, :penname, 'Pen Name'
		%br
		= text_field :user, :penname
		%br
		= label :user, :password, 'Password'
		%br
		= password_field :user, :password 
		%br
		= submit_tag 'Log in'


